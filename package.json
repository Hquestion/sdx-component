{
    "name": "root",
    "private": true,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js, vue}": [
            "eslint --fix",
            "git add"
        ]
    },
    "scripts": {
        "lint": "eslint examples/*.js packages/**/*.js --fix",
        "publish": "lerna publish",
        "bootstrap": "npm i && lerna bootstrap --hoist && cd examples && npm i",
        "release": "standard-version",
        "cm": "git-cz",
        "build:ui": "lerna run build --scope=@sdx/ui",
        "build:widget": "lerna run build --scope=@sdx/widget",
        "build:view": "lerna run build --scope=@sdx/view",
        "build:utils": "lerna run build --scope=@sdx/utils",
        "build": "npm run build:ui && npm run build:widget && npm run build:utils",
        "dev": "cd examples && npm run serve",
        "doc:dev": "vuepress dev docs",
        "doc:build": "vuepress build docs",
        "test:unit": "lerna run test:unit",
        "test:unit:coverage": "lerna run test:unit:coverage",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@vue/test-utils": "^1.0.0-beta.29",
        "axios": "^0.18.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.7.1",
        "babel-loader": "^8.0.5",
        "clean-webpack-plugin": "^2.0.1",
        "commitizen": "^3.0.7",
        "copy-webpack-plugin": "^5.0.2",
        "css-loader": "^2.1.1",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^5.16.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "eslint-plugin-vue": "^5.2.2",
        "file-loader": "^3.0.1",
        "gulp": "^4.0.1",
        "husky": "^1.3.1",
        "jest": "^24.7.1",
        "lerna": "^3.13.1",
        "less": "^3.9.0",
        "lint-staged": "^8.1.5",
        "node-sass": "^4.11.0",
        "sass-loader": "^7.1.0",
        "standard-version": "^5.0.2",
        "style-loader": "^0.23.1",
        "url-loader": "^1.1.2",
        "vue-jest": "^3.0.4",
        "vue-loader": "^15.7.0",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.29.6",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.0",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "core-js": "2.5.7",
        "element-ui": "^2.3.7",
        "highlight.js": "^9.12.0",
        "less-loader": "^4.1.0",
        "sh": "0.0.3",
        "vue": "^2.6.10",
        "vue-highlight.js": "^2.2.0",
        "vuepress": "0.14.10"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "version": "0.0.1",
    "peerDependencies": {
        "vue": "^2.6.10"
    }
}
